<Window x:Class="Gestion_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_Client"
        mc:Ignorable="d"
        Title="Gestion client" Height="835" Width="1399">

    <Grid Margin="10,10,10,12"  RenderTransformOrigin="0.5,0.5">
        <!-- Définition des lignes et colonnes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="64*" />
            <RowDefinition Height="543*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="261*"/>
            <ColumnDefinition Width="518*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Background="White" Grid.ColumnSpan="3">
            <Image HorizontalAlignment="Left" Height="74" Margin="10,0,0,0" VerticalAlignment="Top" Width="113" Source="C:\Users\MEGA_PC PLUS\source\repos\Projet\Sodex_pic.png" OpacityMask="Black"/>
            <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="128,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Height="40" TextChanged="SearchBox_TextChanged"/>
            <Label Content="Recherche Client" HorizontalAlignment="Left" Margin="128,3,0,0" VerticalAlignment="Top" Width="181"/>
        </Grid>

        <ListBox x:Name="ClientListBox" 
          ItemsSource="{Binding}" Grid.Column="0" Margin="1,1,10,4" Background="#FF7FD1FF" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Grid.Row="1"
                 SelectionChanged="ClientListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Grid.Row="1" Grid.Column="1" Height="123" Width="263">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding NomE}" 
FontWeight="Bold" FontSize="22" 
Margin="5,0,42,0" VerticalAlignment="Center" Grid.Column="0"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <GroupBox x:Name="InfoGroupBox" Header="Informations Client" Grid.Column="2" Margin="5,55,5,4" BorderBrush="#FF6498B8"
           Background="#FF7FD1FF" Foreground="DarkRed" FontWeight="Bold" 
           DataContext="{Binding ElementName=ClientListBox, Path=SelectedItem}" Grid.RowSpan="2">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="105*" MinHeight="47"/>
                    <RowDefinition Height="93*" MinHeight="42"/>
                    <RowDefinition Height="93*" MinHeight="42"/>
                    <RowDefinition Height="89*" MinHeight="40"/>
                    <RowDefinition Height="125*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140.195"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="212"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Labels et TextBoxes de votre formulaire -->
                <Label Content="Nom de l'entreprise :" Grid.Row="1" Foreground="DarkRed" FontWeight="Bold" Margin="0,29,6,29"/>
                <TextBox x:Name="txtboxnomc" Text="{Binding NomC, UpdateSourceTrigger=PropertyChanged}"
                   BorderBrush="#FFCB3C2E" Grid.Column="1" Margin="10,0,10,0" Height="29" VerticalAlignment="Center"/>

                <Label Content="Prénom du contact :" Grid.Column="2" Foreground="DarkRed" FontWeight="Bold" Margin="10,38,0,38"/>

                <Label Content="Nom du contact :" Grid.Column="0" Foreground="DarkRed" FontWeight="Bold" Margin="10,38,14,38"/>

                <Label Content="Numero :" Grid.Row="1" Grid.Column="2" Foreground="DarkRed" FontWeight="Bold" Margin="31,29,30,32"/>

                <Label Content="N°Rue :" Grid.Row="2" Grid.Column="0" Margin="35,26,14,38" Foreground="DarkRed" FontWeight="Bold"/>
                <TextBox x:Name="txtboxprenomc" Text="{Binding PrenomC, UpdateSourceTrigger=PropertyChanged}"
                
                Margin="10,38,0,0" BorderBrush="#FFCB3C2E" Grid.Column="3" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="131"/>
                <TextBox x:Name="txtboxnome" Text="{Binding NomE, UpdateSourceTrigger=PropertyChanged}"
                
                Margin="10,29,0,0" BorderBrush="#FFCB3C2E" Height="32" VerticalAlignment="Top" Grid.Row="1" HorizontalAlignment="Left" Width="132" Grid.Column="1"/>
                <Button x:Name="btnSupprimer" Content="Supprimer" Height="40" Margin="5,0,46,0" Grid.Row="4" VerticalAlignment="Center" Grid.Column="1" Click="sup_btn_Click" IsEnabled="False"/>
                <Button x:Name="btnModifier" Content="Modifier" Height="40" Margin="24,0,30,0" Grid.Row="4" VerticalAlignment="Center" Grid.Column="2" Click="btnModifier_Click" IsEnabled="False"/>
                <Button x:Name="btnAjouter" Content="Ajouter" Height="40" Margin="45,0,94,0" Grid.Row="4" VerticalAlignment="Center" Grid.Column="3" Click="ajt_btn_Click"/>
                <Label Content="Code postale :" Grid.Row="3" Grid.Column="0" Margin="19,30,19,30" Foreground="DarkRed" FontWeight="Bold"/>
                <TextBox x:Name="txtboxinfo" Text="{Binding Contact, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="#FFCB3C2E" Height="29" VerticalAlignment="Top" Grid.Column="3" HorizontalAlignment="Left" Width="132" Margin="10,30,0,0" Grid.Row="1"/>
                <TextBox x:Name="txtboxnumrue" Text="{Binding NumeroRue, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="#FFCB3C2E" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="78" Grid.Row="2" Margin="10,29,0,0" Grid.Column="1"/>
                <TextBox x:Name="txtboxnomrue" Text="{Binding NomRue, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="#FFCB3C2E" Height="29" VerticalAlignment="Top" Grid.Column="3" HorizontalAlignment="Left" Width="196" Margin="9,26,0,0" Grid.Row="2"/>
                <TextBox x:Name="txtboxcp" Text="{Binding Cp, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="#FFCB3C2E" Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Width="132" Grid.Row="3" Grid.Column="1" Margin="10,0,0,0"/>
                <Label Content="Nom de la rue :" Grid.Row="2" Grid.Column="2" Foreground="DarkRed" FontWeight="Bold" Margin="24,22,260,42" Grid.ColumnSpan="2"/>
                <Button Content="Deselec" HorizontalAlignment="Left" Height="26" Margin="237,0,0,0" VerticalAlignment="Top" Width="65" Grid.Column="3" Click="Deselc_btn" RenderTransformOrigin="0.506,0.587" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
