<Window x:Class="EmployE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployE"
        mc:Ignorable="d"
        Title="Gestion Employé" Height="724" Width="1090">
    <Window.Resources>
        <local:VerifChamps x:Key="VerifChamps"/>
    </Window.Resources>
    <Grid Margin="10,10,10,12"  RenderTransformOrigin="0.5,0.5">
        <!-- Définition des lignes et colonnes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="61*" />
            <RowDefinition Height="625*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="291*"/>
            <ColumnDefinition Width="488*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Background="White" Grid.ColumnSpan="3">
            <Image HorizontalAlignment="Left" Height="61" Margin="10,2,0,0" VerticalAlignment="Top" Width="98" Source="C:\Users\MEGA_PC PLUS\source\repos\Projet\Sodex_pic.png" OpacityMask="Black"/>
        </Grid>

        <ListBox x:Name="EmployeListBox" 
              ItemsSource="{Binding}" Grid.Column="0" Margin="0,2,10,6" Background="#FF7FD1FF" SelectedItem="{Binding SelectedEmploye}" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Grid.Row="1"
                 SelectionChanged="EmployeListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="91" Width="280">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Nom}" 
               FontWeight="Bold" FontSize="16" 
               Margin="5,0,42,0" VerticalAlignment="Center" Grid.Column="0"/>

                            <TextBlock Text="{Binding Prenom}" 
               FontWeight="Bold" FontSize="16" 
               Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        </Grid>


                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <GroupBox x:Name="InfoGroupBox" Header="Informations employé" Grid.Column="2" Margin="5,55,5,4" BorderBrush="#FF6498B8"
               Background="#FF7FD1FF" Foreground="DarkRed" FontWeight="Bold" 
               DataContext="{Binding ElementName=EmployeListBox, Path=SelectedItem}" Grid.RowSpan="2">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="47*" MinHeight="47"/>
                    <RowDefinition Height="49*" MinHeight="42"/>
                    <RowDefinition Height="49*" MinHeight="48"/>
                    <RowDefinition Height="48*" MinHeight="42"/>
                    <RowDefinition Height="54*" MinHeight="40"/>
                    <RowDefinition Height="63*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="216"/>
                    <ColumnDefinition Width="169*"/>
                    <ColumnDefinition Width="243*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels et TextBoxes de votre formulaire -->
                <Label Content="Nom :" Grid.Row="0" Grid.Column="0" Foreground="DarkRed" FontWeight="Bold" Margin="53,28,3,29"/>
                <TextBox x:Name="txtboxnom" Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"
                      Margin="46,0,28,0" BorderBrush="#FFCB3C2E" Grid.Column="1" Height="31" VerticalAlignment="Center" Grid.ColumnSpan="2"
                         
/>

                <Label Content="Prénom :" Grid.Column="0" Foreground="DarkRed" FontWeight="Bold" Margin="53,33,6,33" Grid.Row="1"/>

                <Label Content="Login :" Grid.Row="2" Grid.Column="0" Foreground="DarkRed" FontWeight="Bold" Margin="53,31,53,30"/>

                <Label Content="Mot de passe :" Grid.Row="3" Grid.Column="0" Foreground="DarkRed" FontWeight="Bold" Margin="53,26,10,35"/>

                <Label Content="Droits :" Grid.Row="4" Grid.Column="0" Margin="53,16,26,4" Foreground="DarkRed" FontWeight="Bold"/>
                <ComboBox x:Name="ComboBoxDroits" 
    Grid.Column="1" 
    Grid.Row="4" 
    Margin="46,21,28,0" 
    Height="26" 
    VerticalAlignment="Top"
                          
    SelectedItem="{Binding Droit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" Background="{x:Null}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:String>admin</sys:String>
                            <sys:String>Employé</sys:String>
                        </x:Array>
                    </ComboBox.ItemsSource>

                </ComboBox>


                <TextBox x:Name="txtboxprenom" Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged}"

                    Margin="46,0,28,0" BorderBrush="#FFCB3C2E" Grid.Column="1" Grid.Row="1" Height="31" VerticalAlignment="Center" Grid.ColumnSpan="2"
                         
/>
                <TextBox x:Name="txtboxlogin" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"

                    Margin="46,0,28,0" BorderBrush="#FFCB3C2E" Grid.Column="1" Grid.Row="2" Height="31" VerticalAlignment="Center" Grid.ColumnSpan="2"
                         />
                <PasswordBox x:Name="txtboxmdp" Margin="46,25,28,0" BorderBrush="#FFCB3C2E" Grid.Column="1" Grid.Row="3" Height="31" VerticalAlignment="Top" Grid.ColumnSpan="2" />


                <Button x:Name="btnSupprimer" Content="Supprimer" Height="31" Margin="0,38,0,0" Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="110" Click="sup_btn_Click" Background="{x:Null}" IsEnabled="False"/>
                <Button x:Name="btnModifier" Content="Modifier" Height="31" Margin="0,38,0,0" Grid.Row="5" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Center" Width="124" IsEnabled="False" Click="btnModifier_Click"/>
                <Button x:Name="btnAjouter" Content="Ajouter" HorizontalAlignment="Left" Height="31" Margin="63,38,0,0" Grid.Row="5" VerticalAlignment="Top" Width="124" Grid.Column="2" Click="ajt_btn_Click" />
                <Button Content="Deselec" HorizontalAlignment="Left" Height="26" Margin="189,-14,0,0" VerticalAlignment="Top" Width="50" Grid.Column="2" Click="Deselc_btn" RenderTransformOrigin="0.506,0.587" />


                <Button Grid.Column="1" Name="affich_btn" Click="TogglePasswordVisibility_Click" BorderBrush="#FFCB3C2E" ToolTip="Afficher/Masquer le mot de passe" Margin="10,28,0,37" Grid.Row="3" HorizontalAlignment="Left" Width="25">
                    <Button.Background>
                        <ImageBrush ImageSource="C:\Users\MEGA_PC PLUS\Desktop\RIAHI_MOHAMED_AYOUB_U6_IR\ANNEXES\Code source\Projet\eya_closed.png"/>
                    </Button.Background>
                </Button>
                <TextBox x:Name="txtboxmdpVisible"  Visibility="Collapsed" BorderBrush="#FFCB3C2E" 
                    Margin="46,25,27,0"  Grid.Column="1" Grid.Row="3" Height="31" VerticalAlignment="Top" Grid.ColumnSpan="2"
                         />
            </Grid>
        </GroupBox>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="116,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Height="37" TextChanged="SearchBox_TextChanged" Grid.Column="1"/>
        <Label Content="Recherche Employé" HorizontalAlignment="Left" Margin="116,-5,0,0" VerticalAlignment="Top" Width="181" Grid.Column="1"/>


    </Grid>
</Window>

